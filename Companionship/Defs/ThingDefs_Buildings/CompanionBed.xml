<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="Bed">
    <defName>Companionship_CompanionBed</defName>
    <label>companion bed</label>
    <description>A bed reserved for companionship work.</description>

    <!-- 2x2 footprint = double-bed behavior in vanilla -->
    <size>(2,2)</size>

    <graphicData>
      <!-- Loads: Textures/Things/Building/Companionship/CompanionBed.png -->
      <texPath>Things/Building/Companionship/CompanionBed</texPath>

      <!-- One texture only -->
      <graphicClass>Graphic_Single</graphicClass>

      <!-- Draw at full 2x2 size -->
      <drawSize>(2,2)</drawSize>
    </graphicData>

    <!-- Optional but nice for the build menu icon -->
    <uiIconPath>Things/Building/Companionship/CompanionBed</uiIconPath>

    <costList>
      <WoodLog>40</WoodLog>
    </costList>

    <building>
      <bed_showSleeperBody>false</bed_showSleeperBody>
      <bed_healPerDay>4</bed_healPerDay>
      <bed_defaultMedical>false</bed_defaultMedical>
    </building>

  </ThingDef>

</Defs>
