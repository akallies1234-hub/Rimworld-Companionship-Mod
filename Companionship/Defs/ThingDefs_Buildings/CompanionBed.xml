<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Companion Bed (2 slots via DoubleBed parent, fixed look, not stuff-based) -->
  <ThingDef ParentName="DoubleBed">
    <defName>Companionship_CompanionBed</defName>
    <label>companion bed</label>
    <description>A dedicated bed used for companion services.</description>

    <!-- 2x2 footprint -->
    <size>(2,2)</size>

    <!-- Custom texture -->
    <graphicData>
      <texPath>CompanionBed</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
    </graphicData>

    <!-- IMPORTANT: make it NOT stuff-based (prevents material selector and fixes the error) -->
    <costStuffCount>0</costStuffCount>
    <stuffCategories Inherit="False" />

    <!-- Fixed build cost (no material selection) -->
    <costList Inherit="False">
      <Steel>40</Steel>
    </costList>
  </ThingDef>

</Defs>
