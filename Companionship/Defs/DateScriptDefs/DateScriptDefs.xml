    <defName>SimpleWalkAndLovin_T1</defName>
    <label>simple walk and lovin</label>
    <tier>1</tier>
    <sequence>
      <li>WalkTogether</li>
      <li>Lovin</li>
    </sequence>
  </DateScriptDef>

  <!-- More complex, higher-tier script: walk -> joy -> meal -> lovin -->
  <DateScriptDef Class="Riot.Companionship.DateScriptDef">
    <defName>PremiumEvening_T3</defName>
    <label>premium evening</label>
    <tier>3</tier>
    <sequence>
      <li>WalkTogether</li>
      <li>JoyActivity</li>
      <li>MealTogether</li>
      <li>Lovin</li>
    </sequence>
  </DateScriptDef>

