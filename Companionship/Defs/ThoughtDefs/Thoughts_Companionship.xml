<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Excellent date -->
  <ThoughtDef>
    <defName>CompanionDate_Excellent</defName>
    <durationDays>1.0</durationDays>
    <stackLimit>1</stackLimit>
    <thoughtClass>Thought_Memory</thoughtClass>
    <stages>
      <li>
        <label>had an amazing date</label>
        <description>That date went perfectly. Great company, great conversation, great atmosphere.</description>
        <baseMoodEffect>12</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- Good date -->
  <ThoughtDef>
    <defName>CompanionDate_Good</defName>
    <durationDays>1.0</durationDays>
    <stackLimit>1</stackLimit>
    <thoughtClass>Thought_Memory</thoughtClass>
    <stages>
      <li>
        <label>had a pleasant date</label>
        <description>That was a nice date. Good company and a comfortable atmosphere.</description>
        <baseMoodEffect>6</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- Bad date -->
  <ThoughtDef>
    <defName>CompanionDate_Bad</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <thoughtClass>Thought_Memory</thoughtClass>
    <stages>
      <li>
        <label>had a disappointing date</label>
        <description>The date did not go very well.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- Terrible date -->
  <ThoughtDef>
    <defName>CompanionDate_Terrible</defName>
    <durationDays>1.0</durationDays>
    <stackLimit>1</stackLimit>
    <thoughtClass>Thought_Memory</thoughtClass>
    <stages>
      <li>
        <label>had a terrible date</label>
        <description>That date was an absolute disaster.</description>
        <baseMoodEffect>-12</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>
