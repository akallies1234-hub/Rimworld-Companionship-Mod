<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- WorkGiver for performing Companion dates -->
  <WorkGiverDef>
    <defName>DoCompanionDate_WorkGiver</defName>
    <label>provide companionship</label>
    <giverClass>Riot.Companionship.WorkGiver_CompanionDate</giverClass>
    <workType>Companion</workType>

    <!-- High priority within the Companion work type -->
    <priorityInType>100</priorityInType>

    <verb>provide companionship</verb>
