<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Companion bed: inherits all stats and behavior from the vanilla DoubleBed,
       but uses our own pink texture. -->

  <ThingDef ParentName="DoubleBed">
    <defName>CompanionBed</defName>
    <label>companion bed</label>
    <description>A comfortable double bed reserved for close company. At the moment it behaves like a normal double bed, but later it will be used for companion dates.</description>

    <graphicData>
      <!-- Path to your pink texture:
           Mods/Companionship/Textures/Things/Companionship/CompanionBed.png -->
      <texPath>Things/Companionship/CompanionBed</texPath>

      <!-- Single texture used for all rotations (since we only have one PNG). -->
      <graphicClass>Graphic_Single</graphicClass>

      <!-- Slightly bigger than 2x2 so it matches the vanilla double bed footprint. -->
      <drawSize>(2.05,2.05)</drawSize>
    </graphicData>
  </ThingDef>

</Defs>
